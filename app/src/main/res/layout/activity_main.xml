<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp">
        <TextView
                android:text="Leitura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/lblLeitura" android:textSize="24sp"
                android:textStyle="bold"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edtLeitura" android:textSize="24sp"/>
        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/cardInventario" app:contentPadding="0dp"
                app:cardElevation="2dp" app:cardCornerRadius="0dp">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:padding="5dp">
                <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp" app:srcCompat="@drawable/inventario"
                        android:id="@+id/imageInventario"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:paddingLeft="5dp">
                    <TextView
                            android:text="Inventário"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/titleInventario"
                            android:textStyle="bold"
                            android:textSize="18sp"/>
                    <TextView
                            android:text="001"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/valueInventario"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <Space
                android:layout_width="0dp"
                android:layout_height="5dp"
        >
        </Space>

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/cardUsuario" app:contentPadding="0dp"
                app:cardElevation="2dp" app:cardCornerRadius="0dp">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:padding="5dp">
                <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp" app:srcCompat="@drawable/user"
                        android:id="@+id/imageUsuario"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:paddingLeft="5dp">
                    <TextView
                            android:text="Usuário"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/titleUsuario" android:textStyle="bold"
                            android:textSize="18sp"/>
                    <TextView
                            android:text="TextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/valueUsuario"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <Space
                android:layout_width="0dp"
                android:layout_height="5dp"
        >
        </Space>

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/cardLote" app:contentPadding="0dp"
                app:cardElevation="2dp" app:cardCornerRadius="0dp">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:padding="5dp">
                <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp" app:srcCompat="@drawable/lote"
                        android:id="@+id/imageLote"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:paddingLeft="5dp">
                    <TextView
                            android:text="Lote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/titleLote" android:textStyle="bold"
                            android:textSize="18sp"/>
                    <TextView
                            android:text="TextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/valueLote"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <Space
                android:layout_width="0dp"
                android:layout_height="5dp"
        >
        </Space>

        <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/listView" android:scrollbars="vertical"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>